<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/background_holo_light">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/long_tap_hint"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
        <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collage_grid" android:layout_gravity="center_horizontal" android:numColumns="3"
                android:drawSelectorOnTop="false" android:background="#ffffff" android:padding="10dp"
                android:smoothScrollbar="false" android:scrollingCache="false"
                android:longClickable="false" android:clickable="false" android:verticalSpacing="0dp"
                android:stretchMode="columnWidth" android:layout_weight="1" android:stackFromBottom="false"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_collage"
                android:id="@+id/create_collage_btn" android:layout_gravity="center_horizontal" android:gravity="center"
                android:clickable="false" android:longClickable="false" android:padding="0dp"
                android:layout_weight="0"/>
    </LinearLayout>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/best_images_image" android:layout_gravity="center_horizontal"
            android:src="@drawable/instollage_icon"
            android:adjustViewBounds="false" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

</RelativeLayout>